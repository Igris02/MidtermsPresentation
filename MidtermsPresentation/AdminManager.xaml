<Window x:Class="MidtermsPresentation.AdminManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MidtermsPresentation"
        mc:Ignorable="d"
        Title="AdminManager" Height="500" Width="1000">
    <Grid>


        <Label Content=" " HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" Height="326" Width="139" Background="#FFB5B5B5"/>

        <Button x:Name="ReturnBtn1" Content="Return" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="36" Width="94" FontSize="20" FontWeight="Bold" Click="ReturnBtn1_Click"/>
        <Button x:Name="LGBtn1" Content="Log Out" HorizontalAlignment="Left" Margin="878,10,0,0" VerticalAlignment="Top" Height="36" Width="94" FontWeight="Bold" FontSize="20" Click="LGBtn1_Click"/>
        <TextBlock HorizontalAlignment="Left" Margin="16,104,0,0" TextWrapping="Wrap" Text="User ID:" VerticalAlignment="Top"/>
        <TextBox x:Name="adduserID" HorizontalAlignment="Left" Margin="16,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="16,161,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top"/>
        <TextBox x:Name="adduserpassword" HorizontalAlignment="Left" Margin="16,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="16,219,0,0" TextWrapping="Wrap" Text="UserName:" VerticalAlignment="Top"/>
        <TextBox x:Name="addusername" HorizontalAlignment="Left" Margin="16,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="16,278,0,0" TextWrapping="Wrap" Text="Role:" VerticalAlignment="Top"/>
        <ComboBox x:Name="addroleCB" HorizontalAlignment="Left" Margin="16,294,0,0" VerticalAlignment="Top" Width="127"/>


        <TextBlock HorizontalAlignment="Left" Margin="20,79,0,0" TextWrapping="Wrap" Text="Add New User" VerticalAlignment="Top" FontWeight="Bold" FontSize="17"/>
        <Label HorizontalAlignment="Left" Margin="168,72,0,0" VerticalAlignment="Top" Height="326" Width="139" Background="#FFB5B5B5">
            <Border BorderBrush="Black" BorderThickness="1"/>
        </Label>
        <TextBlock HorizontalAlignment="Left" Margin="174,104,0,0" TextWrapping="Wrap" Text="New User ID:" VerticalAlignment="Top"/>
        <TextBox x:Name="updateUserIdTextBox" HorizontalAlignment="Left" Margin="174,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="174,161,0,0" TextWrapping="Wrap" Text="New Password:" VerticalAlignment="Top"/>
        <TextBox x:Name="updatePasswordTextBox" HorizontalAlignment="Left" Margin="174,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="174,219,0,0" TextWrapping="Wrap" Text="New UserName:" VerticalAlignment="Top"/>
        <TextBox x:Name="updateUserNameTextBox" HorizontalAlignment="Left" Margin="174,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="174,278,0,0" TextWrapping="Wrap" Text="New Role:" VerticalAlignment="Top"/>
        <ComboBox x:Name="updateRoleComboBox" HorizontalAlignment="Left" Margin="174,294,0,0" VerticalAlignment="Top" Width="127"/>
        <TextBlock HorizontalAlignment="Left" Margin="178,79,0,0" TextWrapping="Wrap" Text="Update User" VerticalAlignment="Top" FontWeight="Bold" FontSize="17"/>
        <Label Content=" " HorizontalAlignment="Left" Margin="328,72,0,0" VerticalAlignment="Top" Height="326" Width="139" Background="#FFB5B5B5"/>
        <TextBlock HorizontalAlignment="Left" Margin="334,104,0,0" TextWrapping="Wrap" Text="User ID:" VerticalAlignment="Top"/>
        <TextBox x:Name="viewUserIdTextBox" HorizontalAlignment="Left" Margin="334,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="334,161,0,0" TextWrapping="Wrap" Text="Password:" VerticalAlignment="Top"/>
        <TextBox x:Name="viewPasswordTextBox" HorizontalAlignment="Left" Margin="334,177,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="334,219,0,0" TextWrapping="Wrap" Text="UserName:" VerticalAlignment="Top"/>
        <TextBox x:Name="viewUserNameTextBox" HorizontalAlignment="Left" Margin="334,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Height="25"/>
        <TextBlock HorizontalAlignment="Left" Margin="334,278,0,0" TextWrapping="Wrap" Text="Role:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="338,79,0,0" TextWrapping="Wrap" Text="View User Details" VerticalAlignment="Top" FontWeight="Bold" FontSize="15"/>
        <TextBox x:Name="viewRoleTextBox" HorizontalAlignment="Left" Margin="334,294,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="127" Height="25"/>
        <DataGrid x:Name="UserDataGrid" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="472,72,28,86" SelectionChanged="UserDataGrid_SelectionChanged"/>
        <TextBlock x:Name="Status" HorizontalAlignment="Left" Margin="10,427,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
        <Button x:Name="Adduser" Content="Add User" HorizontalAlignment="Left" Margin="26,351,0,0" VerticalAlignment="Top" Height="27" Width="108" Click="Adduser_Click"/>
        <Button x:Name="DeleteBtn" Content="Delete" HorizontalAlignment="Left" Margin="830,416,0,0" VerticalAlignment="Top" Height="36" Width="142" Click="DeleteBtn_Click"/>
        <Button x:Name="UpdateBtn" Content="Button" HorizontalAlignment="Left" Margin="187,348,0,0" VerticalAlignment="Top" Height="33" Width="101" Click="UpdateBtn_Click"/>

    </Grid>
</Window>
